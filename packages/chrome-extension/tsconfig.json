{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "strict": true,
    "jsx": "react",
    "types": ["jest", "chrome"],
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": ["types", "node_modules/@types"],
    "types": ["jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
