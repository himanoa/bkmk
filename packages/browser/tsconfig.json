{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib/",
    "rootDir": "./src/",
    "baseUrl": "./",
    "target": "es5",
    "declarationDir": "./lib",
    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./src/*.spec.ts",
    "./src/*.test.ts",
    "node_modules"
  ]
}
